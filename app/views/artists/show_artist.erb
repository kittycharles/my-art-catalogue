<h2> <%=@artist.name%> </h2>
<p> <%=@artist.bio%> </p>
<p> <%=@artist.associated_movements%></p>
<h4>Artworks by <%=@artist.name%>:</h4>
<%Artwork.all.each do |artwork|%>
  <%if artwork.artist == @artist%>
    <ul>
      <%=artwork.artist.name%>:
      <a href='/artworks/<%=artwork.id%>'><%=artwork.title%></a> -
      <a href='/genres/<%=artwork.genre.id%>'><%=artwork.genre.name%></a>
    </ul>
    <%@artist.genres%>
  <%else nil%>
    <%end%>


<%end%>
